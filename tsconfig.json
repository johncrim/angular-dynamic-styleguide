{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "skipLibCheck": true, // Helps build perf. Used by angular packages.
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    // Strict options
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2016", // Can't use e2017 yet: https://github.com/angular/angular/issues/31730
    "module": "es2020",
    "types": [
      "tslib"
    ],
    "lib": [
      "dom",
      "es2020"
    ]
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "strictTemplates": true,
    "strictInjectionParameters": true,
    "fullTemplateTypeCheck": true
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
